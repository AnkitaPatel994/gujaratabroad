<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.intelliworkz.gujaratabroad.ContactUsActivity"
    tools:showIn="@layout/app_bar_contact_us"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/txtAdZoomtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:text="Contact Us"
            android:textStyle="bold"/>


    </LinearLayout>
    <View style="@style/Divider2"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtName"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingTop="15dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/txtName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shilpesh Parikh"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtTel"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Tel :"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/txtTel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="905-846-4988"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtCell"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Cell : "
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/txtCell2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="647-992-6951"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Email :  "
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/txtEmail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="info@gujaratabroad.ca"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtEditor"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Editor : "
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/txtEditor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="editor@gujaratabroad.ca"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>
